<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:stepper="com.yapiodesign.components.android.stepper.*"
		creationComplete="initSkin()">
	<fx:Metadata>
		<![CDATA[ 
		/** 
		* @copy spark.skins.spark.ApplicationSkin#hostComponent
		*/
		[HostComponent("com.yapiodesign.components.android.timepicker.TimePicker")]
		]]>
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import com.yapiodesign.components.android.assets.ClockIconBD;

			[Bindable]
			private var icon:Bitmap;

			protected function initSkin():void
			{
				icon = new Bitmap(new ClockIconBD(0, 0));
			}
		]]>
	</fx:Script>

	<s:states>
		<s:State name="normal"/>
		<s:State name="disabled"/>
		<s:State name="closed"
				 stateGroups="closedGroup"/>
		<s:State name="disabledAndClosed"
				 stateGroups="closedGroup"/>
	</s:states>

	<!-- Transitions for open and close -->
	<s:transitions>
		<s:Transition fromState="closed"
					  toState="normal"
					  autoReverse="true">
			<s:Fade duration="150"
					target="{chrome}"/>
		</s:Transition>

		<s:Transition fromState="disabledAndClosed"
					  toState="disabled"
					  autoReverse="true">
			<s:Fade duration="150"
					target="{chrome}"/>
		</s:Transition>

		<s:Transition fromState="normal"
					  toState="closed"
					  autoReverse="true">
			<s:Fade duration="150"
					target="{chrome}"/>
		</s:Transition>

		<s:Transition fromState="disabled"
					  toState="disabledAndClosed"
					  autoReverse="true">
			<s:Fade duration="150"
					target="{chrome}"/>
		</s:Transition>
	</s:transitions>

	<s:Group id="chrome"
			 left="0"
			 right="0"
			 top="0"
			 bottom="0"
			 visible.closedGroup="false">

		<s:Rect id="background"
				left="0"
				right="0"
				top="0"
				bottom="0">
			<s:fill>
				<!--- @private -->
				<s:SolidColor id="bgFill"
							  color="#000000"
							  alpha=".75"/>
			</s:fill>
		</s:Rect>

		<s:Group width="417"
				 height="390"
				 horizontalCenter="0"
				 verticalCenter="0">

			<s:Rect width="100%"
					height="100%"
					radiusX="5"
					radiusY="5">
				<s:fill>
					<s:SolidColor color="#808080"/>
				</s:fill>
			</s:Rect>

			<s:Rect top="1"
					left="1"
					right="1"
					height="308"
					topLeftRadiusX="5"
					topLeftRadiusY="5"
					topRightRadiusX="4"
					topRightRadiusY="4">
				<s:fill>
					<s:LinearGradient rotation="90">
						<s:GradientEntry color="#403F41"/>
						<s:GradientEntry color="#000000"/>
					</s:LinearGradient>
				</s:fill>
			</s:Rect>

			<s:Image x="41"
					 y="29"
					 source="{icon}"/>

			<s:Label x="96"
					 y="32"
					 text="Select Time"
					 color="#FFFFFF"
					 fontSize="32"/>

			<s:Line width="377"
					y="85"
					horizontalCenter="0">
				<s:stroke>
					<s:SolidColorStroke color="#494949"
										weight="1"/>
				</s:stroke>
			</s:Line>

			<s:HGroup y="105"
					  horizontalCenter="0">
				<stepper:VerticalStepper id="_hoursStepper"/>
				<stepper:VerticalStepper id="_minutesStepper"/>
				<stepper:VerticalStepper id="_ampmStepper"/>
			</s:HGroup>

			<s:HGroup horizontalCenter="0"
					  top="317">
				<s:Button id="_okButton"
						  label="Ok"
						  width="192"/>
				<s:Button id="_cancelButton"
						  label="Cancel"
						  width="192"/>
			</s:HGroup>

		</s:Group>

	</s:Group>

</s:Skin>
